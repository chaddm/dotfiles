[core]
	editor = vim
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[alias]
	cleanup = "!git branch --merged | grep  -v '\\*\\|master\\|develop' | xargs -n 1 git branch -d"
	mt = mergetool
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative HEAD
	lgd = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative HEAD develop
	lgm = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative HEAD master
	lga = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --all
	st = status
	rsync = remote update --prune
	pl = pull --rebase
	ps = push
  cp = cherry-pick -x
  rh = reset --hard
  r = rebase
  ri = rebase -i
  a = add
  ai = add -i
  co = checkout
  pst = push --tags
  rl = reflog
  com = commit
  comall = commit -a
  d = diff
  dw = diff --cached
	unstage = reset HEAD --
	last = log -1 HEAD
	previous = log -1 HEAD~1
[apply]
  whitespace = nowarn
[push]
  default = tracking
[mergetool]
	keepBackup = false
[diff]
	noprefix = true
	tool = diffmerge
[format]
	pretty = fuller
[pull]
	rebase = true
[difftool "diffmerge"]
	cmd = diffmerge $LOCAL $REMOTE
[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
	trustExitCode = true
